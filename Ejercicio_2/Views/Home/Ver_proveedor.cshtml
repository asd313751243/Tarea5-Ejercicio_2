
@{
}
<h1>Lista_proveedor</h1>


<a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Agregar_proveedor">Agregar</a>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Direccion</th>
            <th scope="col">Telefono</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var proveedor in CRUD.Proveedores)
        {
            <tr>
                <th scope="row">@proveedor.Id_proveedor</th>
                <td>@proveedor.Nombre_proveedor</td>
                <td>@proveedor.Direccion_proveedor</td>
                <td>@proveedor.Num_telef_proveedor</td>
                <td><a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Actualizar_proveedor" asp-route-id="@proveedor.Id_proveedor">Actualizar</a></td>
                <td><a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Eliminar_proveedor_yes" asp-route-id="@proveedor.Id_proveedor">Eliminar</a></td>
            </tr>
        }

    </tbody>

</table>


